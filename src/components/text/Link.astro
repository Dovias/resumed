---
import type {Polymorphic} from "astro/types";

export type AttributeProps = object;

type _Props = Omit<Polymorphic<AttributeProps & {
  "as": "a";
}>, "as">;

export type Props = _Props;

const {"class": className, ...props} = Astro.props;
---

<a class:list={["link", className]} {...props}>
  <slot />
</a>

<style lang="scss" is:global>
  @use "sass:map";

  @use "../../style/configuration/color";
  @use "../../style/mixins/compound/font";

  .link {
    color: inherit;
    
    &:active {
      background: color.variable("selection");
      color: color.variable("text", "selection");
    }
  }
</style>
---
import type {AccentColor} from "../../types/colors";

export interface Props {
  "color"?: AccentColor;
  "importance"?: "high" | "low";
  "tag"?: "div" | "article";
}

const {color, importance = "low", tag = "div"} = Astro.props;

const Tag = tag;
---

<Tag class:list={["p-2", "border-4", "border-contour", "rounded-lg", "text-foreground", {
  "bg-primary": color === "primary",
  "bg-secondary": color === "secondary",
  "bg-foreground": !color
}, {
  "shadow-[0.2em_0.2em_0] shadow-contour/20": importance === "low",
  "shadow-[0.4em_0.4em_0] shadow-contour": importance === "high"
}]}>
  <slot />
</Tag>
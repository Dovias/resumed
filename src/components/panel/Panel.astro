---
import "../../style/components/panel/panel.scss";
import "../../style/utilities/shadows.scss";

import type {AccentColor} from "../../types/colors";

export interface Props {
  "color"?: AccentColor;
  "importance"?: "high" | "low";
  "tag"?: "div" | "article";
}

const {color, importance = "low", tag = "div"} = Astro.props;

const Tag = tag;
---

<Tag class:list={[{
  "panel-primary": color === "primary",
  "panel-secondary": color === "secondary",
  "panel-foreground": !color
}, {
  "shadow-subtle": importance === "low",
  "shadow-intense": importance === "high"
}]}>
  <slot />
</Tag>
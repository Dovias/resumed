---
import type {Profile} from "../../profile";

type ProfilePictureProps = Profile["picture"];

export interface Props extends ProfilePictureProps {}

const {path, description = "profile picture"} = Astro.props;
---

<picture class="block w-full">
  <source srcset={path} />
  <img class="w-full bg-primary p-2 outline outline-4 outline-contour rounded-full shadow-[0.4em_0.4em_0] shadow-contour" width="256" alt={description} />
</picture>
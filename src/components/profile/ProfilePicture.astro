---
import type {Profile} from "../../profile";

type ProfilePictureProps = Profile["picture"];

export interface Props extends ProfilePictureProps {}

const {path, description = "profile picture"} = Astro.props;
---

<picture class="profile-picture">
  <source srcset={path} />
  <img width="256" height="256" class="profile-picture__image" alt={description} />
</picture>

<style lang="scss" is:global>
  @use "../../style/mixins/panel" as *;

  .profile-picture {
    display: block;
    width: 100%;
    
    &__image {
      @include panel(
        $padding_size_name: "medium",
        $border_radius_name: "full",
        $shadow_offset_size_name: "large",
        $color_variant_name: "primary",
        $color_name: "accent",
        $color_text: false
      );

      width: 100%;
      height: auto;
    }
  }
</style>
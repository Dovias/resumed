---
import type {Profile} from "../../profile";
import ImagePanel from "../panel/ImagePanel.astro";

type ProfilePictureProps = Profile["picture"];

export interface Props extends ProfilePictureProps {}

const {path, description = "profile picture"} = Astro.props;
---

<picture class="profile-picture">
  <source srcset={path} />
  <ImagePanel accent="primary" importance="high" emphasis="high" width="256" height="256" class="profile-picture__image" alt={description} />
</picture>

<style lang="scss" is:global>
  @use "../../style/configuration/color";

  .profile-picture {
    display: block;
    width: 100%;
    
    &__image {
      width: 100%;
      height: auto;
    }
  }
</style>
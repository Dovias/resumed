---
import type {Profile} from "../../profile";

type ProfilePictureProps = Profile["picture"];

export interface Props extends ProfilePictureProps {}

const {path, description = "profile picture"} = Astro.props;
---

<picture class="profile-picture">
  <source srcset={path} />
  <img width="256" height="256" class="profile-picture__image" alt={description} />
</picture>

<style lang="scss" is:global>
  @use "../../style/configuration/padding";
  @use "../../style/configuration/border";
  @use "../../style/configuration/shadow";
  @use "../../style/configuration/color";

  .profile-picture {
    display: block;
    width: 100%;
    
    &__image {
      width: 100%;
      height: auto;

      padding: padding.size("medium");

      background: color.variable("primary", "accent");

      border: border.size("small") solid color.variable("contour");
      border-radius: border.radius("full");
      box-shadow: shadow.offset("large") shadow.offset("large") 0 color.variable("contour");
    }
  }
</style>
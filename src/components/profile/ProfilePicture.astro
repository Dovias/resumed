---
import type {Profile} from "../../profile";

import Panel, {type Props as PanelProps} from "../panel/Panel.astro";

type ProfilePictureProps = Profile["picture"];

export interface Props extends ProfilePictureProps {}

const {path, description = "profile picture"} = Astro.props;

const panelProps = {
  "accent": "primary",
  "importance": "high",
  "emphasis": "high",
  "as": "img",
  "class": "profile-picture__image",

  "width": "256",
  "height": "256",
  "alt": description
} as PanelProps;
---

<!-- <Panel importance="high" emphasis="high" accent="primary" as="picture"class="profile-picture" /> -->
<picture class="profile-picture">
  <source srcset={path} />
  <Panel {...panelProps} />
</picture>

<style lang="scss" is:global>
  @use "../../style/configuration/color";

  .profile-picture {
    display: block;
    width: 100%;
    
    &__image {
      width: 100%;
      height: auto;
    }
  }
</style>